= form_for @script_beat_character do |f|
  - if @script_beat_character.errors.any?
    #error_explanation
      %h2= "#{pluralize(@script_beat_character.errors.count, "error")} prohibited this script_beat_character from being saved:"
      %ul
        - @script_beat_character.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :script_beat
    = f.text_field :script_beat
  .field
    = f.label :character
    = f.text_field :character
  .actions
    = f.submit 'Save'
